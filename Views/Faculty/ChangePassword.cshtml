
<!DOCTYPE html>
<html>
<head>
    <title>ChangePassword</title>
</head>
<body>
    <hr>
    <h3>
        <p style="text-align:left; color:blue">
            <span style="float:right; color:blue">
                <a href="/Home/Index">Sign out</a>
            </span>
        </p>
    </h3>
    <h2>Change Password</h2>
    <br />
    <form method="post" action="/Faculty/ChangePassword" class="form-group">
        <div class="form-group">
            <label> Enter Current Password:</label><br />
            <input type="text" name="currentPassword" class="form-control">
        </div>
        <div class="form-group">
            <label>Enter New Password:</label><br />
            <input type="password" name="newPassword" class="form-control">
        </div>
        <div class="form-group">
            <label>ReEnter New Password:</label><br />
            <input type="password" name="reEnterPassword" class="form-control">
        </div>
        <input type="submit" value="Save" class="btn btn-success">
        <br />
    </form>

    @if (ViewBag.Check != "")
    {
        <p style="color:red;"> @ViewBag.Check </p>
    }
    <p style="color:blue">
        <a href="/Faculty/Home">Back</a>
    </p>
</body>
</html>

